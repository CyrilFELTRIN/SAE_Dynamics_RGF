@page
@model SAE_Dynamics_RGF.Pages.SalesOrdersModel
@{
    ViewData["Title"] = "Liste des commandes";
}

<div data-rolix-scope>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-2">
            <a asp-page="/Profile" asp-route-tab="orders" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>
                <span data-lang-fr="Retour au profil" data-lang-en="Back to profile">Retour au profil</span>
            </a>
            <h2 class="mb-0" data-lang-fr="Mes commandes" data-lang-en="My orders">@ViewData["Title"]</h2>
        </div>
        <div>
            <button class="btn btn-primary" data-lang-fr="Nouvelle commande" data-lang-en="New order">
                <i class="fas fa-plus me-2"></i>
                <span data-lang-fr="Nouvelle commande" data-lang-en="New order">Nouvelle commande</span>
            </button>
        </div>
    </div>

    @if (!Model.HasOrders)
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="text-muted mb-3">
                    <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                    <h4 class="h5" data-lang-fr="Aucune commande trouvée" data-lang-en="No orders found">Aucune commande trouvée</h4>
                    <p class="mb-0" data-lang-fr="Commencez par créer votre première commande" data-lang-en="Start by creating your first order">
                        Commencez par créer votre première commande
                    </p>
                </div>
                <a href="#" class="btn btn-primary mt-3" data-lang-fr="Créer une commande" data-lang-en="Create an order">
                    <i class="fas fa-plus me-2"></i>
                    <span data-lang-fr="Créer une commande" data-lang-en="Create an order">Créer une commande</span>
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-header border-bottom">
                <div class="row g-3 align-items-center">
                    <div class="col-md-6">
                        <div class="input-group rounded-3">
                            <span class="input-group-text bg-transparent border-end-0"><i class="fas fa-search text-muted"></i></span>
                            <input type="text" class="form-control border-start-0 bg-transparent" placeholder="Rechercher une commande..." data-lang-fr-placeholder="Rechercher une commande..." data-lang-en-placeholder="Search an order..." data-rolix-search-for="rolix-orders-table">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" data-rolix-filter-for="rolix-orders-table">
                            <option value="all" data-lang-fr="Tous les statuts" data-lang-en="All statuses">Tous les statuts</option>
                            <option value="active" data-lang-fr="Actif" data-lang-en="Active">Actif</option>
                            <option value="sent" data-lang-fr="Envoyée" data-lang-en="Sent">Envoyée</option>
                            <option value="cancelled" data-lang-fr="Annulée" data-lang-en="Cancelled">Annulée</option>
                            <option value="executed" data-lang-fr="Exécutée" data-lang-en="Executed">Exécutée</option>
                            <option value="invoiced" data-lang-fr="Facturée" data-lang-en="Invoiced">Facturée</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <div class="d-flex align-items-center justify-content-end">
                            <button class="btn btn-outline-secondary" type="button">
                                <i class="fas fa-filter"></i>
                                <span class="d-none d-md-inline ms-1" data-lang-fr="Filtres" data-lang-en="Filters">Filtres</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table id="rolix-orders-table" class="table table-hover align-middle mb-0" data-rolix-table data-rolix-page-size="10">
                        <thead class="bg-light">
                            <tr>
                                <th class="px-4" data-lang-fr="N°" data-lang-en="#">N°</th>
                                <th data-lang-fr="N° Devis" data-lang-en="Quote #">N° Devis</th>
                                <th data-lang-fr="Produit" data-lang-en="Product">Produit</th>
                                <th class="text-center" data-lang-fr="Date" data-lang-en="Date">Date</th>
                                <th class="text-end pe-4" data-lang-fr="Montant" data-lang-en="Amount">Montant</th>
                                <th class="text-center" data-lang-fr="Statut" data-lang-en="Status">Statut</th>
                                <th class="text-end pe-4" data-rolix-nosort></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.SalesOrders)
                            {
                                var statusKey = "pending";
                                var statusText = order.StateCode;
                                var badgeKey = "pending";

                                switch (order.StatusCode)
                                {
                                    case 0: // Actif
                                        statusKey = "active";
                                        badgeKey = "active";
                                        statusText = "Actif";
                                        break;
                                    case 1: // Envoyée
                                        statusKey = "sent";
                                        badgeKey = "active";
                                        statusText = "Envoyée";
                                        break;
                                    case 2: // Annulé(e)
                                        statusKey = "cancelled";
                                        badgeKey = "cancelled";
                                        statusText = "Annulée";
                                        break;
                                    case 3: // Exécuté(e)
                                        statusKey = "executed";
                                        badgeKey = "completed";
                                        statusText = "Exécutée";
                                        break;
                                    case 4: // Facturé
                                        statusKey = "invoiced";
                                        badgeKey = "completed";
                                        statusText = "Facturée";
                                        break;
                                    default:
                                        statusKey = "pending";
                                        badgeKey = "pending";
                                        statusText = "En attente";
                                        break;
                                }
                                <tr data-status="@statusKey">
                                    <td class="px-4 fw-semibold">
                                        <a href="#" class="text-decoration-none">#@order.OrderNumber</a>
                                    </td>
                                    <td>@(!string.IsNullOrEmpty(order.QuoteNumber) ? "#" + order.QuoteNumber : "-")</td>
                                    <td><a asp-page="/ProductDetail" asp-route-ProductNumber="@order.ProductNumber" class="text-decoration-none fw-semibold">@order.ProductName</a></td>
                                    <td class="text-center" data-sort="@order.CreatedOn.ToString("yyyy-MM-dd")">@order.CreatedOn.ToString("dd/MM/yyyy")</td>
                                    <td class="text-end pe-4 fw-bold" data-sort="@order.TotalAmount.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)">@order.TotalAmount.ToString("N2") €</td>
                                    <td class="text-center">
                                        @{
                                            var statusClass = "status-pending";
                                            if (badgeKey == "active") statusClass = "status-active";
                                            else if (badgeKey == "completed") statusClass = "status-completed";
                                            else if (badgeKey == "cancelled") statusClass = "status-cancelled";
                                        }
                                        <span class="status-badge @statusClass">@statusText</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#savOrderModal-@order.Id" data-lang-fr="Demande SAV" data-lang-en="Support request">
                                            <i class="fas fa-wrench me-1"></i>
                                            Demande SAV
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination -->
                <div class="d-flex justify-content-between align-items-center p-4 border-top" data-rolix-pagination-wrapper-for="rolix-orders-table">
                    <div class="text-muted" data-rolix-info-for="rolix-orders-table"></div>
                    <nav aria-label="Pagination" data-rolix-pagination-for="rolix-orders-table"></nav>
                </div>
            </div>
        </div>
    }
    
    <!-- Modals for SAV requests -->
    @foreach (var order in Model.SalesOrders)
    {
        <div class="modal fade" id="savOrderModal-@order.Id" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" data-lang-fr="Demande SAV" data-lang-en="Support request">Demande SAV</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="post" asp-page-handler="CreateSavFromOrder" enctype="multipart/form-data">
                        <div class="modal-body">
                            <input type="hidden" name="SavOrderId" value="@order.Id" />

                            <div class="mb-3">
                                <label class="form-label" data-lang-fr="Produit concerné" data-lang-en="Product">Produit concerné</label>
                                <select class="form-select" name="SavProductId" required>
                                    <option value="" data-lang-fr="Sélectionner" data-lang-en="Select">Sélectionner</option>
                                    @foreach (var line in order.Lines)
                                    {
                                        <option value="@line.ProductId">@line.ProductName</option>
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" data-lang-fr="Nom" data-lang-en="Name">Nom</label>
                                <input class="form-control" name="SavName" required />
                            </div>

                            <div class="mb-3">
                                <label class="form-label" data-lang-fr="Description" data-lang-en="Description">Description</label>
                                <textarea class="form-control" name="SavDescription" rows="3"></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" data-lang-fr="Diagnostic" data-lang-en="Diagnostic">Diagnostic</label>
                                <select class="form-select" name="SavDiagnostic">
                                    <option value="" data-lang-fr="Sélectionner un diagnostic" data-lang-en="Select a diagnostic">Sélectionner un diagnostic</option>
                                    <option value="258130000" data-lang-fr="Ne fonctionne pas" data-lang-en="Not working">Ne fonctionne pas</option>
                                    <option value="258130001" data-lang-fr="Détérioration esthétique" data-lang-en="Aesthetic deterioration">Détérioration esthétique</option>
                                    <option value="258130002" data-lang-fr="Autre" data-lang-en="Other">Autre</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" data-lang-fr="Photo (optionnel)" data-lang-en="Photo (optional)">Photo (optionnel)</label>
                                <input type="file" class="form-control" name="SavPhoto" accept="image/*" />
                                <div class="form-text">Formats acceptés : JPG, PNG, GIF, BMP, WebP. Taille max : 5MB</div>
                            </div>

                            <div class="alert alert-info mb-0" role="alert">
                                <span data-lang-fr="La date d'achat sera renseignée automatiquement avec la date de la commande." data-lang-en="Purchase date will be set automatically to the order date.">La date d'achat sera renseignée automatiquement avec la date de la commande.</span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal" data-lang-fr="Annuler" data-lang-en="Cancel">Annuler</button>
                            <button type="submit" class="btn btn-danger" data-lang-fr="Envoyer" data-lang-en="Submit">Envoyer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<!-- Styles spécifiques pour cette page -->
<style>
    .avatar-sm {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .bg-soft-primary {
        background-color: rgba(139, 92, 246, 0.1) !important;
    }
    
    .table-responsive {
        overflow: visible !important;
    }

    /* Modal z-index fix - absolute highest priority */
    .modal {
        z-index: 99999 !important;
    }
    
    .modal-backdrop {
        z-index: 99998 !important;
    }
    
    .modal-dialog {
        z-index: 99999 !important;
    }
    
    .modal-content {
        z-index: 99999 !important;
    }
</style>