@page
@model SAE_Dynamics_RGF.Pages.SalesOrdersModel
@{
    ViewData["Title"] = "Mes commandes";
}

<h2 data-lang-fr="Mes commandes" data-lang-en="My orders">@ViewData["Title"]</h2>

<div class="table-responsive mt-4">
    <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-light">
            <tr>
                <th data-lang-fr="Numéro" data-lang-en="Number">Numéro</th>
                <th data-lang-fr="Nom" data-lang-en="Name">Nom</th>
                <th data-lang-fr="Date" data-lang-en="Date">Date</th>
                <th data-lang-fr="Montant (€)" data-lang-en="Amount (€)">Montant (€)</th>
                <th data-lang-fr="Client" data-lang-en="Customer">Client</th>
                <th data-lang-fr="Liste de prix" data-lang-en="Price List">Liste de prix</th>
                <th data-lang-fr="Statut" data-lang-en="Status">Statut</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.SalesOrders)
            {
                <tr>
                    <td>@order.OrderNumber</td>
                    <td>@order.Name</td>
                    <td>@order.CreatedOn.ToString("dd/MM/yyyy")</td>
                    <td>@order.TotalAmount.ToString("F2")</td>
                    <td>@order.CustomerId</td>
                    <td>@order.PriceLevelId</td>
                    <td>@order.StateCode</td>
                </tr>
            }
        </tbody>
    </table>
</div>
