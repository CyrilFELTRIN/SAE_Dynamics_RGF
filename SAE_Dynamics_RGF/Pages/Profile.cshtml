@page
@model SAE_Dynamics_RGF.Pages.ProfileModel
@{
    ViewData["Title"] = "Mon profil";
}

<div class="container py-4" data-rolix-scope>
    <div class="row g-4">
        <div class="col-12 col-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 44px; height: 44px;">
                            <i class="fas fa-user"></i>
                        </div>
                        <div>
                            <div class="fw-semibold">@Model.UserName</div>
                            <div class="text-muted small" data-lang-fr="Compte" data-lang-en="Account">Compte</div>
                        </div>
                    </div>

                    <div class="list-group list-group-flush">
                        <a asp-page="/Profile" asp-route-tab="info" class="list-group-item list-group-item-action @(Model.ActiveTab == "info" ? "active" : "")">
                            <i class="fas fa-id-card fa-fw me-2"></i>
                            <span data-lang-fr="Informations" data-lang-en="Profile">Informations</span>
                        </a>
                        <a asp-page="/Profile" asp-route-tab="requests" class="list-group-item list-group-item-action @(Model.ActiveTab == "requests" ? "active" : "")">
                            <i class="fas fa-briefcase fa-fw me-2"></i>
                            <span data-lang-fr="Mes demandes" data-lang-en="My requests">Mes demandes</span>
                        </a>
                        <a asp-page="/Profile" asp-route-tab="quotes" class="list-group-item list-group-item-action @(Model.ActiveTab == "quotes" ? "active" : "")">
                            <i class="fas fa-file-invoice-dollar fa-fw me-2"></i>
                            <span data-lang-fr="Devis" data-lang-en="Quotes">Devis</span>
                        </a>
                        <a asp-page="/Profile" asp-route-tab="orders" class="list-group-item list-group-item-action @(Model.ActiveTab == "orders" ? "active" : "")">
                            <i class="fas fa-shopping-cart fa-fw me-2"></i>
                            <span data-lang-fr="Commandes" data-lang-en="Orders">Commandes</span>
                        </a>
                        <a asp-page="/Profile" asp-route-tab="invoices" class="list-group-item list-group-item-action @(Model.ActiveTab == "invoices" ? "active" : "")">
                            <i class="fas fa-receipt fa-fw me-2"></i>
                            <span data-lang-fr="Factures" data-lang-en="Invoices">Factures</span>
                        </a>
                        <a asp-page="/Profile" asp-route-tab="sav" class="list-group-item list-group-item-action @(Model.ActiveTab == "sav" ? "active" : "")">
                            <i class="fas fa-screwdriver-wrench fa-fw me-2"></i>
                            <span data-lang-fr="Demandes SAV" data-lang-en="Support requests">Demandes SAV</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-9">
            @if (Model.ActiveTab == "info")
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h2 class="h4 mb-3" data-lang-fr="Informations du profil" data-lang-en="Profile information">Informations du profil</h2>
                        <dl class="row mb-0">
                            <dt class="col-sm-4" data-lang-fr="Nom" data-lang-en="Name">Nom</dt>
                            <dd class="col-sm-8">@Model.UserName</dd>

                            <dt class="col-sm-4" data-lang-fr="Identifiant" data-lang-en="Username">Identifiant</dt>
                            <dd class="col-sm-8">@Model.UserIdentifiant</dd>
                        </dl>
                    </div>
                </div>
            }
            else if (Model.ActiveTab == "quotes")
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="h4 mb-0" data-lang-fr="Mes devis" data-lang-en="My quotes">Mes devis</h2>
                            <a asp-page="/Quotes" class="btn btn-outline-primary btn-sm">
                                <span data-lang-fr="Voir les devis" data-lang-en="View quotes">Voir les devis</span>
                            </a>
                        </div>

                        @if (!Model.Quotes.Any())
                        {
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-file-invoice fa-2x mb-3"></i>
                                <div data-lang-fr="Aucun devis" data-lang-en="No quotes">Aucun devis</div>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th data-lang-fr="N°" data-lang-en="#">N°</th>
                                            <th data-lang-fr="Produit" data-lang-en="Product">Produit</th>
                                            <th data-lang-fr="Date" data-lang-en="Date">Date</th>
                                            <th class="text-end" data-lang-fr="Montant" data-lang-en="Amount">Montant</th>
                                            <th data-lang-fr="Statut" data-lang-en="Status">Statut</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var q in Model.Quotes)
                                        {
                                            <tr>
                                                <td class="fw-semibold">#@q.QuoteNumber</td>
                                                <td><a asp-page="/ProductDetail" asp-route-ProductNumber="@q.ProductNumber" class="text-decoration-none fw-semibold">@q.ProductName</a></td>
                                                <td>@q.CreatedOn.ToString("dd/MM/yyyy")</td>
                                                <td class="text-end fw-semibold">@q.TotalAmount.ToString("N2") €</td>
                                                <td>@Model.GetQuoteStatusText(q)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (Model.ActiveTab == "requests")
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="h4 mb-0" data-lang-fr="Mes demandes" data-lang-en="My requests">Mes demandes</h2>
                            <a asp-page="/Requests" class="btn btn-outline-primary btn-sm">
                                <span data-lang-fr="Voir les demandes" data-lang-en="View requests">Voir les demandes</span>
                            </a>
                        </div>

                        @if (!Model.Opportunities.Any())
                        {
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-briefcase fa-2x mb-3"></i>
                                <div data-lang-fr="Aucune demande" data-lang-en="No requests">Aucune demande</div>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th data-lang-fr="Demande" data-lang-en="Request">Demande</th>
                                            <th data-lang-fr="Date" data-lang-en="Date">Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var opp in Model.Opportunities)
                                        {
                                            <tr>
                                                <td class="fw-semibold">@opp.Name</td>
                                                <td>@opp.CreatedOn.ToString("dd/MM/yyyy")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (Model.ActiveTab == "sav")
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="h4 mb-0" data-lang-fr="Mes demandes SAV" data-lang-en="My support requests">Mes demandes SAV</h2>
                            <a asp-page="/SavRequests" class="btn btn-outline-primary btn-sm">
                                <span data-lang-fr="Voir les demandes SAV" data-lang-en="Open support requests">Voir les demandes SAV</span>
                            </a>
                        </div>

                        @if (Model.SavRequests == null || !Model.SavRequests.Any())
                        {
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-screwdriver-wrench fa-2x mb-3"></i>
                                <div data-lang-fr="Aucune demande SAV" data-lang-en="No support requests">Aucune demande SAV</div>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th data-lang-fr="Nom" data-lang-en="Name">Nom</th>
                                            <th data-lang-fr="Produit" data-lang-en="Product">Produit</th>
                                            <th data-lang-fr="Date d'achat" data-lang-en="Purchase date">Date d'achat</th>
                                            <th data-lang-fr="Créée le" data-lang-en="Created on">Créée le</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var s in Model.SavRequests)
                                        {
                                            <tr>
                                                <td class="fw-semibold">@s.Name</td>
                                                <td><a asp-page="/ProductDetail" asp-route-ProductNumber="@s.ProductNumber" class="text-decoration-none fw-semibold">@s.ProductName</a></td>
                                                <td>@(s.PurchaseDate.HasValue ? s.PurchaseDate.Value.ToString("dd/MM/yyyy") : "")</td>
                                                <td>@(s.CreatedOn.HasValue ? s.CreatedOn.Value.ToString("dd/MM/yyyy") : "")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (Model.ActiveTab == "orders")
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="h4 mb-0" data-lang-fr="Mes commandes" data-lang-en="My orders">Mes commandes</h2>
                            <a asp-page="/Salesorder" class="btn btn-outline-primary btn-sm">
                                <span data-lang-fr="Voir les commandes" data-lang-en="View orders">Voir les commandes</span>
                            </a>
                        </div>

                        @if (!Model.SalesOrders.Any())
                        {
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-shopping-cart fa-2x mb-3"></i>
                                <div data-lang-fr="Aucune commande" data-lang-en="No orders">Aucune commande</div>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th data-lang-fr="N°" data-lang-en="#">N°</th>
                                            <th data-lang-fr="Produit" data-lang-en="Product">Produit</th>
                                            <th data-lang-fr="Date" data-lang-en="Date">Date</th>
                                            <th class="text-end" data-lang-fr="Montant" data-lang-en="Amount">Montant</th>
                                            <th data-lang-fr="Statut" data-lang-en="Status">Statut</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var o in Model.SalesOrders)
                                        {
                                            <tr>
                                                <td class="fw-semibold">#@o.OrderNumber</td>
                                                <td><a asp-page="/ProductDetail" asp-route-ProductNumber="@o.ProductNumber" class="text-decoration-none fw-semibold">@o.ProductName</a></td>
                                                <td>@o.CreatedOn.ToString("dd/MM/yyyy")</td>
                                                <td class="text-end fw-semibold">@o.TotalAmount.ToString("N2") €</td>
                                                <td>@Model.GetOrderStatusText(o)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="h4 mb-0" data-lang-fr="Mes factures" data-lang-en="My invoices">Mes factures</h2>
                            <a asp-page="/Invoices" class="btn btn-outline-primary btn-sm">
                                <span data-lang-fr="Voir les factures" data-lang-en="Open invoices">Voir les factures</span>
                            </a>
                        </div>

                        @if (!Model.Invoices.Any())
                        {
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-receipt fa-2x mb-3"></i>
                                <div data-lang-fr="Aucune facture" data-lang-en="No invoices">Aucune facture</div>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th data-lang-fr="N°" data-lang-en="#">N°</th>
                                            <th data-lang-fr="Produit" data-lang-en="Product">Produit</th>
                                            <th data-lang-fr="Date" data-lang-en="Date">Date</th>
                                            <th class="text-end" data-lang-fr="Montant" data-lang-en="Amount">Montant</th>
                                            <th data-lang-fr="Statut" data-lang-en="Status">Statut</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var inv in Model.Invoices)
                                        {
                                            <tr>
                                                <td>@(!string.IsNullOrEmpty(inv.InvoiceNumber) ? inv.InvoiceNumber : "-")</td>
                                                <td><a asp-page="/ProductDetail" asp-route-ProductNumber="@inv.ProductNumber" class="text-decoration-none fw-semibold">@inv.ProductName</a></td>
                                                <td>@inv.CreatedOn.ToString("dd/MM/yyyy")</td>
                                                <td class="text-end fw-semibold">@inv.TotalAmount.ToString("N2") €</td>
                                                <td>@(inv.StateCode?.ToString() ?? "N/A")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
