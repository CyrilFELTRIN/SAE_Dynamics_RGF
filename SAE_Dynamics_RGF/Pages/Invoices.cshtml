@page
@model SAE_Dynamics_RGF.Pages.InvoicesModel
@{
    ViewData["Title"] = "Liste des factures";
}

<div data-rolix-scope>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-2">
            <a asp-page="/Profile" asp-route-tab="invoices" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>
                <span data-lang-fr="Retour au profil" data-lang-en="Back to profile">Retour au profil</span>
            </a>
            <h2 class="mb-0" data-lang-fr="Mes factures" data-lang-en="My invoices">@ViewData["Title"]</h2>
        </div>
        <div>
            <button class="btn btn-primary" data-lang-fr="Nouvelle facture" data-lang-en="New invoice">
                <i class="fas fa-plus me-2"></i>
                <span data-lang-fr="Nouvelle facture" data-lang-en="New invoice">Nouvelle facture</span>
            </button>
        </div>
    </div>

@if (!Model.Invoices.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <div class="text-muted mb-3">
                <i class="fas fa-file-invoice-dollar fa-3x mb-3"></i>
                <h4 class="h5" data-lang-fr="Aucune facture trouvée" data-lang-en="No invoices found">Aucune facture trouvée</h4>
                <p class="mb-0" data-lang-fr="Commencez par créer votre première facture" data-lang-en="Start by creating your first invoice">
                    Commencez par créer votre première facture
                </p>
            </div>
            <a href="#" class="btn btn-primary mt-3" data-lang-fr="Créer une facture" data-lang-en="Create an invoice">
                <i class="fas fa-plus me-2"></i>
                <span data-lang-fr="Créer une facture" data-lang-en="Create an invoice">Créer une facture</span>
            </a>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-header border-bottom">
            <div class="row g-3 align-items-center">
                <div class="col-md-6">
                    <div class="input-group rounded-3">
                        <span class="input-group-text bg-transparent border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" class="form-control border-start-0 bg-transparent" placeholder="Rechercher une facture..." data-lang-fr-placeholder="Rechercher une facture..." data-lang-en-placeholder="Search an invoice..." data-rolix-search-for="rolix-invoices-table">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" data-rolix-filter-for="rolix-invoices-table">
                        <option value="all" data-lang-fr="Tous les statuts" data-lang-en="All statuses">Tous les statuts</option>
                        <option value="draft" data-lang-fr="Brouillon" data-lang-en="Draft">Brouillon</option>
                        <option value="active" data-lang-fr="Actif" data-lang-en="Active">Actif</option>
                        <option value="completed" data-lang-fr="Conclu" data-lang-en="Won">Conclu</option>
                        <option value="closed" data-lang-fr="Fermé" data-lang-en="Closed">Fermé</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="d-flex align-items-center justify-content-end">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-download"></i>
                            <span class="d-none d-md-inline ms-1" data-lang-fr="Exporter" data-lang-en="Export">Exporter</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="rolix-invoices-table" class="table table-hover align-middle mb-0" data-rolix-table data-rolix-page-size="10">
                    <thead class="bg-light">
                        <tr>
                            <th data-lang-fr="N°" data-lang-en="#">N°</th>
                            <th class="px-4" data-lang-fr="N° Commande" data-lang-en="Order #">N° Commande</th>
                            <th data-lang-fr="N° Devis" data-lang-en="Quote #">N° Devis</th>
                            <th data-lang-fr="Produit" data-lang-en="Product">Produit</th>
                            <th class="text-center" data-lang-fr="Date" data-lang-en="Date">Date</th>
                            <th class="text-end pe-4" data-lang-fr="Montant" data-lang-en="Amount">Montant</th>
                            <th class="text-end pe-4" data-rolix-nosort></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in Model.Invoices)
                        {
                            <tr>
                                <td>@(!string.IsNullOrEmpty(invoice.InvoiceNumber) ? invoice.InvoiceNumber : "-")</td>
                                <td class="px-4 fw-semibold">
                                    <a href="#" class="text-decoration-none">#@invoice.OrderNumber</a>
                                </td>
                                <td>@(!string.IsNullOrEmpty(invoice.QuoteNumber) ? "#" + invoice.QuoteNumber : "-")</td>
                                <td><a asp-page="/ProductDetail" asp-route-ProductNumber="@invoice.ProductNumber" class="text-decoration-none fw-semibold">@invoice.ProductName</a></td>
                                <td class="text-center" data-sort="@invoice.CreatedOn.ToString("yyyy-MM-dd")">@invoice.CreatedOn.ToString("dd/MM/yyyy")</td>
                                <td class="text-end pe-4 fw-bold" data-sort="@invoice.TotalAmount.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)">@invoice.TotalAmount.ToString("N2") €</td>
                                <td class="text-end pe-4">
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-link text-muted" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="#" data-lang-fr="Voir les détails" data-lang-en="View details">Voir les détails</a></li>
                                            <li><a class="dropdown-item" href="#" data-lang-fr="Télécharger le PDF" data-lang-en="Download PDF">Télécharger le PDF</a></li>
                                            <li><a class="dropdown-item" href="#" data-lang-fr="Envoyer par email" data-lang-en="Send by email">Envoyer par email</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center p-4 border-top" data-rolix-pagination-wrapper-for="rolix-invoices-table">
                <div class="text-muted" data-rolix-info-for="rolix-invoices-table"></div>
                <nav aria-label="Pagination" data-rolix-pagination-for="rolix-invoices-table"></nav>
            </div>
        </div>
    </div>
}

</div>

<!-- Styles spécifiques pour cette page -->
<style>
    .avatar-sm {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .bg-soft-primary {
        background-color: rgba(139, 92, 246, 0.1) !important;
    }
    
    .dropdown-menu {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border: none;
        border-radius: 0.5rem;
        padding: 0.5rem;
    }
    
    .dropdown-item {
        padding: 0.5rem 1rem;
        border-radius: 0.35rem;
        font-size: 0.85rem;
    }
    
    .table > :not(caption) > * > * {
        padding: 1rem 0.5rem;
    }
    
    .form-select, .form-control {
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        border: 1px solid var(--border-color);
        background-color: var(--card-bg);
        color: var(--text-color);
        transition: all 0.2s ease;
    }
    
    .form-select:focus, .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(139, 92, 246, 0.25);
    }
    
    .input-group {
        background-color: var(--card-bg);
        border-radius: 0.5rem;
        border: 1px solid var(--border-color);
        transition: all 0.2s ease;
    }
    
    .input-group:focus-within {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(139, 92, 246, 0.25);
    }
    
    .input-group-text {
        background-color: transparent;
        border: none;
        color: var(--text-muted);
    }

</style>
