@page
@model SAE_Dynamics_RGF.Pages.LoginModel
@{ 
    ViewData["Title"] = "Connexion";
}

<section class="auth-shell">
    <div class="auth-main" id="authMain">
        <div class="auth-pane auth-pane--register" id="authRegisterPane">
            <form class="auth-form" method="post" asp-page-handler="Register">
                <h1 class="auth-title" data-lang-fr="Créer un compte" data-lang-en="Create Account">Créer un compte</h1>

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="auth-icons" aria-hidden="true">
                    <span class="auth-icon">
                        <i class="fab fa-facebook-f"></i>
                    </span>
                    <span class="auth-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </span>
                </div>

                <div class="auth-sub" data-lang-fr="ou utilisez votre email" data-lang-en="or use email">ou utilisez votre email</div>

                <input class="auth-input" asp-for="RegisterFirstName" placeholder="Prénom" data-lang-fr="Prénom" data-lang-en="First name" required />
                <input class="auth-input" asp-for="RegisterLastName" placeholder="Nom" data-lang-fr="Nom" data-lang-en="Last name" required />
                <input class="auth-input" asp-for="RegisterEmail" type="email" placeholder="Email" data-lang-fr="Email" data-lang-en="Email" required />
                <input class="auth-input" asp-for="RegisterIdentifiant" placeholder="Identifiant" data-lang-fr="Identifiant" data-lang-en="Username" required />
                <input class="auth-input" asp-for="RegisterPassword" type="password" placeholder="Mot de passe" data-lang-fr="Mot de passe" data-lang-en="Password" required />
                <input class="auth-input" asp-for="RegisterBirthDate" type="date" />
                <input class="auth-input" asp-for="RegisterMobilePhone" placeholder="Téléphone" data-lang-fr="Téléphone" data-lang-en="Mobile phone" />

                <button class="auth-button" type="submit" data-lang-fr="S'inscrire" data-lang-en="SIGN UP">S'inscrire</button>

                @if (!string.IsNullOrEmpty(Model.RegisterErrorMessage))
                {
                    <div class="alert alert-danger mt-3 mb-0 text-center">
                        @Model.RegisterErrorMessage
                    </div>
                }
            </form>
        </div>

        <div class="auth-pane auth-pane--login" id="authLoginPane">
            <form class="auth-form" method="post">
                <h1 class="auth-title" data-lang-fr="Connexion" data-lang-en="Sign in">Connexion</h1>

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="auth-icons" aria-hidden="true">
                    <span class="auth-icon">
                        <i class="fab fa-facebook-f"></i>
                    </span>
                    <span class="auth-icon">
                        <i class="fab fa-linkedin-in"></i>
                    </span>
                </div>

                <div class="auth-sub" data-lang-fr="ou utilisez votre identifiant" data-lang-en="or use your account">ou utilisez votre identifiant</div>

                <input class="auth-input" asp-for="Crda6Id" placeholder="Identifiant" data-lang-fr="Identifiant" data-lang-en="Username" required />
                <input class="auth-input" asp-for="Crda6Password" type="password" placeholder="Mot de passe" data-lang-fr="Mot de passe" data-lang-en="Password" required />

                <a class="auth-link" data-lang-fr="Mot de passe oublié ?" data-lang-en="Forgot your password?">Mot de passe oublié ?</a>
                <button class="auth-button" type="submit" data-lang-fr="Se connecter" data-lang-en="SIGN IN">Se connecter</button>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger mt-3 mb-0 text-center">
                        @Model.ErrorMessage
                    </div>
                }
            </form>
        </div>

        <div class="auth-switch" id="authSwitch">
            <div class="auth-switch-circle"></div>
            <div class="auth-switch-circle auth-switch-circle--t"></div>

            <div class="auth-switch-content" id="authSwitchLogin">
                <h2 class="auth-title" data-lang-fr="Bon retour !" data-lang-en="Welcome Back!">Bon retour !</h2>
                <p class="auth-desc" data-lang-fr="Connectez-vous avec vos identifiants." data-lang-en="Login with your personal info.">Connectez-vous avec vos identifiants.</p>
                <button class="auth-button auth-button--ghost" type="button" id="authToLogin" data-lang-fr="Connexion" data-lang-en="SIGN IN">Connexion</button>
            </div>

            <div class="auth-switch-content auth-hidden" id="authSwitchRegister">
                <h2 class="auth-title" data-lang-fr="Bienvenue !" data-lang-en="Hello Friend!">Bienvenue !</h2>
                <p class="auth-desc" data-lang-fr="Créez votre compte en quelques secondes." data-lang-en="Enter your details and start your journey.">Créez votre compte en quelques secondes.</p>
                <button class="auth-button auth-button--ghost" type="button" id="authToRegister" data-lang-fr="Inscription" data-lang-en="SIGN UP">Inscription</button>
            </div>
        </div>
    </div>

    <script>
        (function () {
            const main = document.getElementById('authMain');
            const toLogin = document.getElementById('authToLogin');
            const toRegister = document.getElementById('authToRegister');
            const switchLogin = document.getElementById('authSwitchLogin');
            const switchRegister = document.getElementById('authSwitchRegister');
            if (!main || !toLogin || !toRegister || !switchLogin || !switchRegister) return;

            function showLogin() {
                main.classList.add('auth-show-register');
                switchLogin.classList.add('auth-hidden');
                switchRegister.classList.remove('auth-hidden');
            }

            function showRegister() {
                main.classList.remove('auth-show-register');
                switchLogin.classList.remove('auth-hidden');
                switchRegister.classList.add('auth-hidden');
            }

            toLogin.addEventListener('click', showLogin);
            toRegister.addEventListener('click', showRegister);

            const hasLoginError = @(!string.IsNullOrEmpty(Model.ErrorMessage) ? "true" : "false");
            if (hasLoginError) {
                showLogin();
            }
        })();
    </script>
</section>
