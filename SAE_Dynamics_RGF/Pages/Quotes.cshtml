@page
@model SAE_Dynamics_RGF.Pages.QuotesModel
@{
    ViewData["Title"] = "Liste des devis";
}

<div data-rolix-scope>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0" data-lang-fr="Mes devis" data-lang-en="My quotes">@ViewData["Title"]</h2>
        <div>
            <button class="btn btn-primary" data-lang-fr="Nouveau devis" data-lang-en="New quote">
                <i class="fas fa-plus me-2"></i>
                <span data-lang-fr="Nouveau devis" data-lang-en="New quote">Nouveau devis</span>
            </button>
        </div>
    </div>

@if (!Model.Quotes.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <div class="text-muted mb-3">
                <i class="fas fa-file-invoice fa-3x mb-3"></i>
                <h4 class="h5" data-lang-fr="Aucun devis trouvé" data-lang-en="No quotes found">Aucun devis trouvé</h4>
                <p class="mb-0" data-lang-fr="Commencez par créer votre premier devis" data-lang-en="Start by creating your first quote">
                    Commencez par créer votre premier devis
                </p>
            </div>
            <a href="#" class="btn btn-primary mt-3" data-lang-fr="Créer un devis" data-lang-en="Create a quote">
                <i class="fas fa-plus me-2"></i>
                <span data-lang-fr="Créer un devis" data-lang-en="Create a quote">Créer un devis</span>
            </a>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-header border-bottom">
            <div class="row g-3 align-items-center">
                <div class="col-md-6">
                    <div class="input-group rounded-3">
                        <span class="input-group-text bg-transparent border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" class="form-control border-start-0 bg-transparent" placeholder="Rechercher un devis..." data-lang-fr-placeholder="Rechercher un devis..." data-lang-en-placeholder="Search a quote..." data-rolix-search-for="rolix-quotes-table">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" data-rolix-filter-for="rolix-quotes-table">
                        <option value="all" data-lang-fr="Tous les statuts" data-lang-en="All statuses">Tous les statuts</option>
                        <option value="draft" data-lang-fr="Brouillon" data-lang-en="Draft">Brouillon</option>
                        <option value="active" data-lang-fr="Actif" data-lang-en="Active">Actif</option>
                        <option value="completed" data-lang-fr="Conclu" data-lang-en="Won">Conclu</option>
                        <option value="closed" data-lang-fr="Fermé" data-lang-en="Closed">Fermé</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="d-flex align-items-center justify-content-end">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-download"></i>
                            <span class="d-none d-md-inline ms-1" data-lang-fr="Exporter" data-lang-en="Export">Exporter</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="rolix-quotes-table" class="table table-hover align-middle mb-0" data-rolix-table data-rolix-page-size="10">
                    <thead class="bg-light">
                        <tr>
                            <th class="px-4" data-lang-fr="N° DEVIS" data-lang-en="QUOTE #">N° DEVIS</th>
                            <th data-lang-fr="CLIENT" data-lang-en="CUSTOMER">CLIENT</th>
                            <th class="text-center" data-lang-fr="DATE" data-lang-en="DATE">DATE</th>
                            <th class="text-end pe-4" data-lang-fr="MONTANT" data-lang-en="AMOUNT">MONTANT</th>
                            <th class="text-center" data-lang-fr="STATUT" data-lang-en="STATUS">STATUT</th>
                            <th class="text-end pe-4" data-rolix-nosort></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var quote in Model.Quotes)
                        {
                            var statusKey = "pending";
                            var statusText = quote.StateCode;
                            var badgeKey = "pending";
                            
                            switch (quote.StatusCode)
                            {
                                case 0: // Brouillon
                                    statusKey = "draft";
                                    badgeKey = "draft";
                                    statusText = "Brouillon";
                                    break;
                                case 1: // Actif
                                    statusKey = "active";
                                    badgeKey = "active";
                                    statusText = "Actif";
                                    break;
                                case 2: // Conclue
                                    statusKey = "completed";
                                    badgeKey = "completed";
                                    statusText = "Conclu";
                                    break;
                                case 3: // Fermé(e)
                                    statusKey = "closed";
                                    badgeKey = "closed";
                                    statusText = "Fermé";
                                    break;
                                default:
                                    statusKey = "pending";
                                    badgeKey = "pending";
                                    statusText = "En attente";
                                    break;
                            }
                            <tr data-status="@statusKey">
                                <td class="px-4 fw-semibold">
                                    <a href="#" class="text-decoration-none">#@quote.QuoteNumber</a>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 me-3">
                                            <div class="avatar-sm bg-soft-primary rounded-circle d-flex align-items-center justify-content-center">
                                                <i class="fas fa-building text-primary"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-0">@quote.CustomerId</h6>
                                            <small class="text-muted">@quote.PriceLevelId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center" data-sort="@quote.CreatedOn.ToString("yyyy-MM-dd")">@quote.CreatedOn.ToString("dd/MM/yyyy")</td>
                                <td class="text-end pe-4 fw-bold" data-sort="@quote.TotalAmount.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)">@quote.TotalAmount.ToString("N2") €</td>
                                <td class="text-center">
                                    @{
                                        var statusClass = "status-pending";
                                        if (badgeKey == "draft") statusClass = "status-draft";
                                        else if (badgeKey == "active") statusClass = "status-active";
                                        else if (badgeKey == "completed") statusClass = "status-completed";
                                        else if (badgeKey == "closed") statusClass = "status-closed";
                                    }
                                    <span class="status-badge @statusClass">@statusText</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-link text-muted" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="#" data-lang-fr="Voir les détails" data-lang-en="View details">Voir les détails</a></li>
                                            <li><a class="dropdown-item" href="#" data-lang-fr="Télécharger le PDF" data-lang-en="Download PDF">Télécharger le PDF</a></li>
                                            <li><a class="dropdown-item text-danger" href="#" data-lang-fr="Annuler le devis" data-lang-en="Cancel quote">Annuler le devis</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center p-4 border-top" data-rolix-pagination-wrapper-for="rolix-quotes-table">
                <div class="text-muted" data-rolix-info-for="rolix-quotes-table"></div>
                <nav aria-label="Pagination" data-rolix-pagination-for="rolix-quotes-table"></nav>
            </div>
        </div>
    </div>
}

</div>

<!-- Styles spécifiques pour cette page -->
<style>
    .avatar-sm {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .bg-soft-primary {
        background-color: rgba(139, 92, 246, 0.1) !important;
    }
    
    .dropdown-menu {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        border: none;
        border-radius: 0.5rem;
        padding: 0.5rem;
    }
    
    .dropdown-item {
        padding: 0.5rem 1rem;
        border-radius: 0.35rem;
        font-size: 0.85rem;
    }
    
    .table > :not(caption) > * > * {
        padding: 1rem 0.5rem;
    }

    .form-select, .form-control {
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        border: 1px solid var(--border-color);
        background-color: var(--card-bg);
        color: var(--text-color);
        transition: all 0.2s ease;
    }
    
    .form-select:focus, .form-control:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(139, 92, 246, 0.25);
    }
    
    .input-group {
        background-color: var(--card-bg);
        border-radius: 0.5rem;
        border: 1px solid var(--border-color);
        transition: all 0.2s ease;
    }
    
    .input-group:focus-within {
        border-color: var(--primary);
        box-shadow: 0 0 0 0.2rem rgba(139, 92, 246, 0.25);
    }
    
    .input-group-text {
        background-color: transparent;
        border: none;
        color: var(--text-muted);
    }
    
</style>
